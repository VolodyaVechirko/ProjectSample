<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TopSwitchView">
        <item name="android:minWidth">256dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:background">@drawable/switch_view_bg</item>

        <item name="btnDrawable">@drawable/switch_view_btn</item>
        <item name="textAppearance">@style/SwitchViewText</item>
        <item name="textColor">@color/switch_view_text</item>
    </style>

    <style name="SwitchViewText">
        <item name="android:textColor">@color/darkText</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="FlipViewItem">
        <item name="android:minHeight">80dp</item>
        <item name="android:gravity">center</item>
        <item name="textColor">@color/darkText</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/switch_view_btn</item>
    </style>

</resources>
